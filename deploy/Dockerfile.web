# WebUI 镜像：Vite 构建 + Nginx 静态托管 + /api 反代

FROM node:20-alpine AS build

WORKDIR /work/frontend-web

COPY frontend-web/package.json frontend-web/package-lock.json ./
RUN npm ci

COPY frontend-web ./
RUN npm run build

FROM nginx:1.27-alpine

COPY deploy/nginx/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /work/frontend-web/dist /usr/share/nginx/html

EXPOSE 80

