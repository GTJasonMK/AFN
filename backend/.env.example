# 应用基础配置
APP_NAME=Arboris-Novel-PyQt
DEBUG=True
LOGGING_LEVEL=INFO

# JWT 密钥（生产环境必须修改）
SECRET_KEY=your-secret-key-change-this-in-production

# 数据库配置
DB_PROVIDER=sqlite

# MySQL 配置（仅当 DB_PROVIDER=mysql 时需要）
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=yourpassword
# MYSQL_DATABASE=arboris_novel

# LLM API 配置（可选 - 可在应用界面的"LLM配置"页面添加）
# 也可以在此处配置默认值
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_API_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4-turbo-preview

# Embedding 模型配置
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# 向量数据库配置
VECTOR_DB_URL=file:storage/vectors.db

# 向量检索参数
VECTOR_TOP_K_CHUNKS=5
VECTOR_TOP_K_SUMMARIES=3
VECTOR_CHUNK_SIZE=480
VECTOR_CHUNK_OVERLAP=120

# 章节生成配置
WRITER_CHAPTER_VERSION_COUNT=2
WRITER_PARALLEL_GENERATION=true
WRITER_MAX_PARALLEL_REQUESTS=3
